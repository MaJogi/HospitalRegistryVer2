@model Open.Facade.Doctor.DoctorViewModel

@{
    ViewBag.Title = "Create Doctor";
    //var dateNow = DateTime.Now.ToString("yyyy-MM-dd");

    <script>
        function ResetForm() {
            document.getElementById("TxtFName").value = "";
            document.getElementById("TxtLName").value = "";
            document.getElementById("TxtIdCode").value = "";
            document.getElementById("TxtProblem").value = "";
            document.getElementById("TxtValidFrom").value = 0;
            document.getElementById("TxtValidTo").value = 0;
            document.getElementById("TxtPhoneNumber").value = "";
        }

/**/</script>
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateDoctor</title>
</head>
<body>
    <h4>Doctor</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateDoctor">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DoctorId" />
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCode" class="control-label"></label>
                    <input asp-for="IdCode" class="form-control" />
                    <span asp-validation-for="IdCode" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HireDate" class="control-label"></label>
                    <input asp-for="HireDate" class="form-control" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
                

                <div class="form-group">
                    <input type="submit" value="Save Doctor" class="btn btn-primary" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Reset"  class="btn btn-primary onclick="ResetForm();" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>







